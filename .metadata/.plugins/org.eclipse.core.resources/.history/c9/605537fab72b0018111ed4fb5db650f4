package Exercicio412;

public class Testes2 {

	public static void main(String[] args) {	
		Pessoa p1 = new Pessoa();
		p1.setNome("Dennis Ribeiro");
		p1.setIdade(15);
		
		p1.fazAniversario();
		p1.fazAniversario();
		p1.fazAniversario();
		
		System.out.println("Nome: " + p1.getNome() + "\nIdade: " + p1.getIdade());
		
		Porta p1 = new Porta();
		p1.abre();
		p1.fecha();
		p1.pinta("Azul");
		p1.pinta("Verde");
		p1.pinta("Amarela");
		p1.setDimensaoX(10);
		p1.setDimensaoY(15);
		p1.setDimensaoZ(25);
		System.out.println("Aberta: " + p1.estaAberta() ? "Sim" : "Não");
	}

}
